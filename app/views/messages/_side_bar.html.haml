.side-bar
  .side-bar__user-name
    .top-items
      %p.top-items__name
        = current_user.name
      %ul.top-items__icons
        = link_to new_group_path do
          %li.top-items__icons__new-group
            = link_to new_group_path do
              = icon('fas', 'pen-square', class: 'icon')
              %span<>
          %li.top-items__icons__edit-user
            = link_to edit_user_path(current_user) do
              = icon('fas', 'cog', class: 'icon')
              %span<>
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group-items
        = link_to group_messages_path(group) do
          .group-items__name
            = group.name
          .group-items__message
            = group.show_last_message